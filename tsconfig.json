{
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/**/*",
		"test/**/*"
	],
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"declaration": true,
		"outDir": "./dist",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declarationDir": "./dist",
		"moduleResolution": "nodenext",
		"noEmitOnError": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
	}
}
